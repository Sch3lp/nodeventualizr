p There are {{posts.length}} posts
div(class='row-fluid')
div(ng-repeat='post in posts', class='span6')
	h3 {{post.title}}
	p {{post.text}}
	p
		a(href='readPost/{{post.id}}', class='icon-comment')
		|  - 
		a(href='editPost/{{post.id}}', class='icon-edit')
		|  - 
		a(href='deletePost/{{post.id}}', class='icon-trash')